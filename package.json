{
  "name": "tn-conventions",
  "version": "0.2.0",
  "description": "A repo containing our best practices and conventions for frontend projects.",
  "main": "index.js",
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "release": "standard-version --silent",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TelenorFrontend/conventions.git"
  },
  "author": "Per Kristian Kummermo (pkkummermo)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TelenorFrontend/conventions/issues"
  },
  "homepage": "https://github.com/TelenorFrontend/conventions#readme",
  "devDependencies": {
    "husky": "^0.14.3",
    "standard-version": "^4.2.0",
    "validate-commit-msg": "^2.12.2"
  }
}
